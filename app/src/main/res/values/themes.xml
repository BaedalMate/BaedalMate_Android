<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaedalMate" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_FB6C1C</item>
        <item name="colorPrimaryVariant">@color/gray_main_C4C4C4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_dark_8F939B</item>
        <item name="colorSecondaryVariant">@color/gray_light_F2F3F6</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/white_FFFFFF</item>
    </style>

    <style name="Theme.BaedalMate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>