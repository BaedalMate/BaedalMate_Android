<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaedalMate" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_FB5F1C</item>
        <item name="colorPrimaryVariant">@color/gray_main_C4C4C4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_dark_666666</item>
        <item name="colorSecondaryVariant">@color/gray_light_F9F9F9</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/white_FFFFFF</item>
    </style>

    <style name="Theme.BaedalMate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextBackground" parent="Theme.BaedalMate">
        <!-- EditText color-->
        <item name="android:colorControlNormal">@color/gray_dark_666666</item>
        <item name="android:colorControlActivated">@color/main_FB5F1C</item>
        <item name="android:textColorHighlight">@color/main_FB5F1C</item>
        <item name="android:textCursorDrawable">@color/black_000000</item>
    </style>

    <style name="BottomSheetDialogRadius">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>