<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_home_top_post_tag_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_white_radius_10">

        <TextView
            android:id="@+id/tv_home_top_post_tag"
            style="@style/style_caption1_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_radius_11_5_stroke_1"
            android:backgroundTint="@color/line_orange_FFA077"
            android:backgroundTintMode="screen"
            android:includeFontPadding="true"
            android:lineHeight="18dp"
            android:paddingHorizontal="7.5dp"
            android:paddingVertical="3dp"
            android:singleLine="true"
            android:textColor="@color/line_orange_FFA077"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            tools:text="간편식" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>