<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_spinner_sort"
        style="@style/style_body2_kor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingStart="35dp"
        android:paddingEnd="15dp"
        android:textColor="@color/black_000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="최신순" />

    <ImageView
        android:id="@+id/img_spinner_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingEnd="15dp"
        android:src="@drawable/ic_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_spinner_sort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/tv_spinner_sort"
        app:layout_constraintTop_toTopOf="@id/tv_spinner_sort"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@color/black_000000" />
</androidx.constraintlayout.widget.ConstraintLayout>