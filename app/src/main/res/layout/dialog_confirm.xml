<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_radius_10"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/tv_dialog_confirm_title"
        style="@style/style_title2_kor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/main_FB5F1C"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_dialog_confirm_description"
        style="@style/style_body2_kor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:textColor="@color/gray_dark_666666"
        tools:text="description Messages" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_line_EBEBEB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_confirm_cancel"
            style="@style/style_body1_kor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_gray_line_white_radius_10_bottom_left"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingVertical="14dp"
            android:stateListAnimator="@null"
            android:text="@string/cancel"
            android:textColor="@color/black_000000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_confirm_confirm"
            style="@style/style_body1_kor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_gray_line_white_radius_10_bottom_right"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingVertical="14dp"
            android:stateListAnimator="@null"
            android:text="@string/confirm"
            android:textColor="@color/black_000000" />
    </LinearLayout>
</LinearLayout>